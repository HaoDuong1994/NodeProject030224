<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous" />
    <title>Order Page</title>
  </head>
  <body>
    <form action="/order/create-order" method="POST">
      <div class="d-flex">
        <div class="p-2 flex-fill">
          <div class="display-6">Order Information</div>
          <div class="d-flex flex-column mb-3">
            <div class="p-2"></div>
            <div class="p-2">
              <input name="receiverName" placeholder="Reciver Name" />
            </div>
            <div class="p-2">
              <input name="phoneNumber" placeholder="Phone number" />
            </div>
            <div class="p-2">
              <input name="deliveryAddress" placeholder="Address" />
            </div>
            <div class="p-2">
              <div>Payment Method</div>
              <input type="radio" id="html" name="paymentMethod" value="Card" />
              <label for="html">Card</label><br />
              <input type="radio" id="css" name="paymentMethod" value="COD" />
              <label for="css">COD</label><br />
            </div>
            <div class="p-2">
              <button class="btn btn-danger">Order</button>
            </div>
          </div>
        </div>
        <div class="p-2 flex-fill">
          <div class="display-6">All Product</div>
          <div
            class="overflow-y-auto mt-2 border border-3"
            style="width: 350px; height: 300px">
            <% for(let i=0; i < product.length; i++) { %>
            <div class="d-flex justify-content-between" style="width: 18rem">
              <img
                src="<%= product[i].img %>"
                class="card-img-top img-fluid"
                style="height: 50px; width: 50px"
                alt="..." />
              <input
                type="hidden"
                name="productsID"
                value="<%= product[i]._id %>" />
              <div class="card-body">
                <h5 class="card-title"><%= product[i].name %></h5>
                <p class="card-text"><%= product[i].description %></p>
              </div>
            </div>
            <div class="p-2">
              <div class="d-flex justify-content-start">
                <div class="align-self-center">Price</div>
                <div class="mx-l p-2 text-danger" style="width: 200px">
                  <%= product[i].price %>
                </div>
                <input name="" type="hidden" value="<%= product[i].price %>" />
              </div>
            </div>
            <% } %>
          </div>
          <div class="mt-3">
            <div class="d-flex flex-row mb-3">
              <div>Total product</div>
              <span class="ms-3 badge text-bg-primary rounded-pill"
                ><%= product.length %></span
              >
            </div>
            <div class="d-flex flex-row">
              <div class="fs-5">Total price</div>
              <span class="ms-4 text-md-end fs-5 text-danger"
                ><%= totalPrice %></span
              >
              <input
                name="totalPrice"
                type="hidden"
                value="<%= totalPrice %>" />
            </div>
          </div>
        </div>
      </div>
    </form>
  </body>
</html>
