<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <head>
      <meta charset="utf-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1" />
      <title>Your cart</title>
      <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
        crossorigin="anonymous" />
    </head>
    <style>
      #id-product {
        display: none;
      }
      #td-id-product {
        display: none;
      }
      .img-item {
        width: 50px;
        height: 50px;
      }
      #total-price {
        display: flex;
        justify-content: space-around;
      }
      .total-price {
        color: red;
      }
    </style>
    <title>Your cart</title>
  </head>
  <body>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Number</th>
          <th id="id-product" scope="col">ID</th>
          <th scope="col">Product Name</th>
          <th scope="col">Img</th>
          <th scope="col">Price</th>
          <th scope="col">Status</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < listProduct.length; i++) { %>
        <tr>
          <th scope="row"><%= i + 1 %></th>
          <td id="td-id-product"><%= listProduct[i]._id %></td>
          <td><%= listProduct[i].name %></td>
          <td><img class="img-item" src="<%= listProduct[i].img %>" /></td>
          <td><%= listProduct[i].price %></td>
          <td>
            <button>
              <a href="/customerProductsPage/order/<%= listProduct[i]._id %>"
                >Order</a
              >
            </button>
          </td>
          <td>
            <form
              action="/customer/delete-item/<%= listProduct[i]._id %>"
              method="POST">
              <button>X</button>
            </form>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <div id="total-price">
      <div>Total price</div>
      <span class="total-price"><%= totalPrice %></span>
    </div>
  </body>
</html>
