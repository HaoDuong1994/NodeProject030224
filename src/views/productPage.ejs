<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
      .img-product {
        width: 5px;
        height: 5px;
      }
    </style>
    <title>Product</title>
  </head>
  <body>
    <ul class="nav">
      <li class="nav-item">
        <a
          class="nav-link active"
          aria-current="page"
          href="/adminProductsPage/create-product"
          >Create product</a
        >
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Link</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Link</a>
      </li>
      <li class="nav-item">
        <a class="nav-link disabled" aria-disabled="true">Disabled</a>
      </li>
    </ul>
    <table class="table">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Imgage</th>
        <th>Price</th>
        <th>Description</th>
        <th>Type</th>
      </tr>
      <% for (let i = 0; i < listProduct.length; i++) { %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= listProduct[i].name %></td>
        <td><%= listProduct[i].img %></td>
        <td><%= listProduct[i].price %></td>
        <td><%= listProduct[i].description %></td>
        <td><%= listProduct[i].type %></td>
        <td>
          <a href="/editProductPage/<%= listProduct[i]._id %>">
            <button>Edit</button>
          </a>
        </td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
